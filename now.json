{
  "name": "spectrum",
  "version": 2,
  "public": false,
  "scope": "client",
  "github": {
    "enabled": false
  },
  "builds": [
    {
      "src": "client/package.json",
      "use": "@now/next"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/client/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/client/_error" }
  ]
}
