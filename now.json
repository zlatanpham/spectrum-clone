{
  "name": "spectrum",
  "version": 2,
  "public": false,
  "scope": "client",
  "github": {
    "enabled": false
  },
  "builds": [
    {
      "src": "client/package.json",
      "use": "@now/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/client/$1",
      "headers": {
        "x-request-path": "$1"
      }
    },
    { "handle": "filesystem" },
    {
      "src": "/(.*)",
      "dest": "/client/$1.html",
      "headers": {
        "x-request-path": "$1"
      }
    }
  ]
}
